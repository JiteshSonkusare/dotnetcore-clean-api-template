{
  "ConnectionStrings": {
    "SqlConnection": "Server=(localdb)\\MSSQLLocalDB;Database=CCFCleanAPITemplate;Trusted_Connection=True;TrustServerCertificate=True;Encrypt=false"
  },

  /* Swagger Section */
  "OpenApiConfig": {
    "IsDefaultModelSchemaExpand": true,
    /* Provide openapi info to set application and owner details on swagger page. */
    "OpenApiInfoExt": {
      "Title": "",
      "Description": "",
      "OpenApiContactExt": {
        "Name": "",
        "Email": "",
        "Url": ""
      }
    },
    "SecurityExt": {
      /* Set it to True, To add Authorize button in swagger page */
      "IsSecured": true,
      /* To remove 'Authorize' button for unsecured versions on the Swagger page, add them to the list below. */
      "NonSecuredVersions": [ "v1" ]
    },
    "ServerPathFilters": {
      "IsBasePathListFilter": true,
      /* To use BasePathListFilter section set IsBasePathListFilter to true. */
      "BasePathListFilter": [
        {
          "Environment": "dev1",
          "URL": "https://localhost:5000"
        },
        {
          "Environment": "dev1",
          "URL": "http://localhost:5001"
        }
      ],
      /* To use CustomeBasePathFilter section set IsBasePathListFilter to false. */
      "CustomeBasePathFilter": {
        "EnvironmentNames": [ "stest", "atest", "prod" ],
        "URL": "https://{Environment}.contoso.net"
      }
    }
  },

  /* Set it to true to enable authentication, or set it to false to disable it. */
  "EnableAuthentication": false,
  /* Provide azure ad configuration */
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "ClientId": "",
    "TenantId": "",
    "Audience": ""
  },

  "UserConfig": {
    "BaseURL": "https://localhost:5000/v1"
  }
}